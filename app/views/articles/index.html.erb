<style>
table
{
  border-collapse:collapse
}
table, td, th
{
border:1px solid black;
}
</style>

<table style="border:groove 3px black; border-collapse:collapse;">
  <tr>
    <th style ="padding:15px">Title</th>
    <th style = "padding:6px">Description</th>
    <th style = "padding:6px">User_id</th>
    <th style = "padding:6px" colspan="6">Actions</th>
  </tr>
  <% @articles.each do |article| %>
    <tr>
      <td style ="color:SaddleBrown;padding:5px"><%= article.title %></td>
      <td style ="color:MidnightBlue;padding:10px"><%= article.description %></td>
      <td style ="color:MidnightBlue;;padding:5px"><%= current_user.email  %></td>
      <td style="padding:5px"><%= link_to 'Show', article_path(article) %></td>
      <td style="padding:5px"><%= link_to 'Edit', edit_article_path(article) %></td>
      <td style="padding:5px"><%= button_to 'delete', article_path(article), method: :delete, :confirm => :"Are you sure" %> </td>
    </tr>
  <% end %>
</table>
